<h1>Listing urls</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Url name</th>
    <th>Title</th>
    <th>Description</th>
  </tr>

<% @urls.each do |url| %>
  <tr>
    <td><%=h url.id %></td>
    <td><%=h url.url_name %></td>
    <td><%=h url.title %></td>
    <td><%=h url.description %></td>
    <td><%= link_to 'Show', url %></td>
    <td><%= link_to 'Edit', edit_url_path(url) %></td>
    <td><%= link_to 'Destroy', url, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New url', new_url_path %>